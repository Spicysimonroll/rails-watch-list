<%= render 'lists/navbar' %>
<h1 class="mt-5 pt-5 text-center">Add a movie</h1>
<div class="container">
  <%= simple_form_for([@list, @bookmark]) do |f| %>
    <%= f.input :movie_id, :collection => @movies %>
    <%= f.input :comment %>
    <%= f.submit "Add movie" %>
  <% end %>
  <%= link_to "Back", list_path(@list), class: "btn btn-primary mt-5 pt-2 pb-2 ps-3 pe-3 rounded" %>
</div>
